mixin quickDonation(amounts)

  if amounts && amounts.length > 1
    form(
      name="quickDonation"
      action="/donate"
      )

      for amount in amounts
        input(
          type="radio"
          name="amount"
          id="quickDonationAmount#{amount}"
          value=amount)

        label(for="quickDonationAmount#{amount}") $ #{amount}

      input(type="submit" value="Donate")